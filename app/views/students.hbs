{{#extends "base"}}
{{#block "title"}}Students{{/block}}

{{#block "content"}}
<div class="pt-5 pb-1 mb-4 d-flex w-100">
<div>
<h1>Student Information</h1>
<div>To edit entry please choose an action to proceed.</div>
</div>
<div class="ms-auto mt-auto">
<div class="btn btn-primary align-self-end addNew">+ New Student</div>
</div>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">StudentID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Programme</th>
      <th scope="col">Start Date</th>
      <th scope="col">Action</th>

    
    </tr>
  </thead>
  <tbody>
    {{#each students}}
    <tr>
    {{!-- add 1 to make the index start at 1, is a function from handlebars helpers --}}
      <td>{{add 1 @index}}</td>
      <td>{{student_id}}</td>
      <td>{{first_name}}</td>
      <td>{{last_name}}</td>
      <td>{{programme_name}}</td>
      <td>{{start_date}}</td>
      <td><div class="d-flex"><div class="edit btn"><i class="bi bi-pencil-square"></i>
</div><div class="delete btn"><i class="bi bi-trash"></i></div></div></td>

    </tr>
    {{/each}}
  </tbody>
</table>
{{/block}}
{{/extends}}